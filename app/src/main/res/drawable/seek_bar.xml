<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape
            android:shape="line">
            <stroke
                android:color="@color/colorLightGrey"
                android:width="@dimen/seek_bar_thickness"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <color android:color="@color/colorPirple"/>
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/colorPirple"
                    android:width="@dimen/seek_bar_thickness"/>
                <corners
                    android:radius="5dp"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <color android:color="@color/colorPirple"/>
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/colorLightGrey"
                    android:width="@dimen/seek_bar_thickness"/>
                <corners
                    android:radius="5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>